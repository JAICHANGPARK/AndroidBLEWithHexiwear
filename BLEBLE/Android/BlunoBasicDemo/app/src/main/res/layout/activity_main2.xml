<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dfrobot.angelo.blunobasicdemo.Main2Activity">

    <LinearLayout
        android:paddingLeft="6dp"
        android:id="@+id/syncLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전달 받은 데이터 개수"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="패턴 데이터 : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patterNumText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="44 개"
                android:textColor="@color/mediumblue"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="당뇨 데이터 : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diabetesNumText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="44 개"
                android:textColor="@color/mediumblue"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/dataRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/syncLinearlayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp">

    </android.support.v7.widget.RecyclerView>
